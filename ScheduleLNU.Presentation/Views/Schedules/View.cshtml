<!DOCTYPE html>
@model IEnumerable<ScheduleLNU.BusinessLogic.DTOs.ScheduleDto>
<form method="post" a></form>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html lang="en">
<head>
    <title>Schedules</title>
    <link  type="text/css" rel="stylesheet" href="~/css/schedules/view.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Schedules</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    <div class="container">
        <ul class="items">
            <form class="button-item"
                  method="post" 
                  asp-action="AddSchedule" 
                  asp-controller="Schedules"
                  asp-route-studentId="228" 
                  asp-route-scheduleTitle="ScheduleTitle">
                <button class="add-button" type="submit">
                    <span>
                        <span>
                             Add Schedule
                        </span>
                    </span>
                </button>
            </form>
            @foreach (var item in @Model)
            {
                <li>
                    <a href="/" class="item">
                        <div class="item-title">
                            @Html.DisplayName(item.Title)
                        </div>
                        <div class="item-actions">
                            <form>
                                <button id="edit-button" class="action-button">
                                    <svg xmlns="http://www.w3.org/2000/svg" 
                                         width="16" 
                                         height="16" 
                                         fill="currentColor" 
                                         class="bi bi-pen" 
                                         viewBox="0 0 16 16">
                                      <path d="m13.498.795.149-.149a1.207 
                                            1.207 0 1 1 1.707 1.708l-.149.148a1.5 
                                            1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 
                                            0 0 1-.233.131l-4 1a.5.5 0 0 
                                            1-.606-.606l1-4a.5.5 0 0 1 
                                            .131-.232l9.642-9.642a.5.5 0 
                                            0 0-.642.056L6.854 4.854a.5.5 
                                            0 1 1-.708-.708L9.44.854A1.5 
                                            1.5 0 0 1 11.5.796a1.5 1.5 0 
                                            0 1 1.998-.001zm-.644.766a.5.5 
                                            0 0 0-.707 0L1.95 11.756l-.764 
                                            3.057 3.057-.764L14.44 3.854a.5.5 
                                            0 0 0 0-.708l-1.585-1.585z"/>
                                    </svg>
                                </button>
                            </form>
                            <form method="post" 
                                  asp-action="DeleteSchedule" 
                                  asp-controller="Schedules"
                                  asp-route-studentId="228" 
                                  asp-route-scheduleId="@item.Id">

                                <button id="delete-button" class="action-button" type="submit">
                                    <svg xmlns="http://www.w3.org/2000/svg" 
                                         width="16" height="16" 
                                         fill="currentColor" 
                                         class="bi bi-trash" 
                                         viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 
                                              0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 
                                              0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 
                                              0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 
                                              0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" 
                                              d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 
                                              0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 
                                              1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 
                                              0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 
                                              0 0 1 1 1v1zM4.118 4 4 4.059V13a1 
                                              1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 
                                              4H4.118zM2.5 3V2h11v1h-11z"/>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </a>
                
                
                </li>
            }
        </ul>
    </div>
</body>
</html>
