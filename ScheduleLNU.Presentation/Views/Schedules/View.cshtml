<head>
    <title>Schedules</title>
    <link  type="text/css" rel="stylesheet" href="~/css/schedules/view.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<div class="container">
    <ul class="items">
		<button class="add-button" onclick="showForm()">
			Add Schedule
		</button>
        using
		<form method="post" id="add-schedule-form" style="display: none;" >
			<div asp-validation-summary="All"></div>

			<div class="form-row">
				<div class="title-field">
					<label asp-for="Title">Schedule Title</label>
					<input type="text" asp-for="Title" placeholder="Enter Title">
					<span asp-validation-for="Title" class=" alert-danger"></span>
				</div>
			</div>
			<button type="submit" onclick="hideForm()">Save</button>
			<button onclick="hideForm()">Cancel</button>
		</form>
        @foreach (var item in @Model)
        {
            <li>
                <a href="/" class="item">
                    <div class="item-title">
                        @Html.DisplayName(item.Title)
                    </div>
                    <form class="item-actions">
                        <button class="action-button">EDIT</button>
                        <button class="action-button">DELETE</button>
                    </form>
                </a>
                
                
            </li>
        }
    </ul>
</div>
<script type="text/javascript">
    function showForm() {
		document.getElementById('add-schedule-form').style.display = 'block';
    }
	function hideForm() {
		document.getElementById('add-schedule-form').style.display = 'none';
	}
</script>
