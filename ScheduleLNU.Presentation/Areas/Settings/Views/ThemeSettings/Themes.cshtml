@inject ScheduleLNU.BusinessLogic.Services.Interfaces.IThemeStyleService themeService
@model IEnumerable<ScheduleLNU.BusinessLogic.DTOs.ThemeDto>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Themes";
    var selectedTheme = await themeService.GetSelectedTheme();
}
<html>
<head>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <meta charset="utf-8" />
    <title>Themes</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/themes.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link type="text/css" rel="stylesheet" href="~/css/base.css" />
    <link type="text/css" rel="stylesheet" href="~/css/schedules/view.css" />
    <link type="text/css" rel="stylesheet" href="~/css/theme.css" />
</head>

<body style="background-color: @selectedTheme.BackColor;">
    <div id="placeholderElement" style="position:absolute"></div>
    <div class="my-container">
        @Html.Partial("~/Views/Shared/_Header.cshtml")
        <h1 id="main-label">Themes</h1>
        <ul class="items">
            <li>
                <form
                      method="get"
                      asp-action="ThemePreview"
                      asp-controller="ThemeSettings"
                      asp-area="settings">
                    <button class="add-button" type="submit">
                        <span>
                            <span>
                                Add theme
                            </span>
                        </span>
                    </button>
                </form>
            </li>
            @foreach (var theme in Model)
            {
                var isSelectedClass = theme.IsSelected ? "selected-theme" : "unselected-theme";
                var iconClass = theme.IsSelected ? "bi bi-check2-circle" : "bi bi-circle";
                <li>
                    <div class="item">
                        <div class="item-title" style="font-size: @selectedTheme.FontSize; 
                                                       font-family: @selectedTheme.Font;
                                                       color: @selectedTheme.ForeColor">
                            @Html.DisplayName(theme.Title)
                        </div>
                    <div class="item-actions">
                            <button
                                type="button"
                                class="select-button action-button @isSelectedClass"
                                data-url="@Url.Action("SelectTheme", "ThemeSettings", theme)">
                                <i id="select-icon" class="@iconClass"></i>
                            </button>
                            <button
                                type="button"
                                class="edit-button action-button"
                                data-url="@Url.Action("Theme", "ThemeSettings", new { themeId = @theme.Id })">
                                <i id="edit-icon" class="bi bi-pen"></i>
                            </button>
                        @{
                           if (theme.IsSelected == false){
                                 <button id="delete-button"
                                    type="button"
                                    class="action-button"
                                    data-toggle="ajax-modal" data-target="deleteModalCenter"
                                    data-url="@Url.Action("DeletePopup", "ThemeSettings", theme)">
                                <i id="trash-icon" class="bi bi-trash"></i>
                            </button>
                           }
                        }
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</body>
</html>