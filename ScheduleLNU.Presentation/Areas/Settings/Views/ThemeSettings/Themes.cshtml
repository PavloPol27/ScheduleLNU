@model IEnumerable<ScheduleLNU.BusinessLogic.DTOs.ThemeDTO>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Themes";
}

<link rel="stylesheet" href=~/css/schedules/view.css/>
<link rel="stylesheet" href=~/css/base.css/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<body>
    <div class="my-container">
        <h1 id="main-label">Themes</h1>
        <ul class="items">
            <li class="navigation">
                <form class="button-item"
                      method="get"
                      asp-action="SettingsMenu"
                      asp-controller="Configuration"
                      asp-area="settings"
                      asp-route-studentId="1">
                    <button class="add-button" type="submit">
                        <span>
                            <span>
                                Back to settings
                            </span>
                        </span>
                    </button>
                </form>
                <form class="button-item"
                      method="get"
                      asp-action="ThemePreview"
                      asp-controller="ThemeSettings"
                      asp-area="settings"
                      asp-route-studentId="1">
                    <button class="add-button" type="submit">
                        <span>
                            <span>
                                Add theme
                            </span>
                        </span>
                    </button>
                </form>
            </li>
            @foreach (var theme in Model)
            {
                <li>
                    <div class="item">
                        <div class="item-title">
                            @Html.DisplayName(theme.Title)
                        </div>
                        <div class="item-actions">
                            <form>
                                <a id="edit-button"
                                   class="action-button"
                                   asp-action="Theme"
                                   asp-controller="ThemeSettings"
                                   asp-area="settings"
                                   asp-route-studentId="1"
                                   asp-route-themeId="@theme.Id">
                                    <i id="edit-icon" class="bi bi-pen"></i>
                                </a>
                            </form>

                            <form method="post">
                                <a id="delete-button"
                                   class="action-button"
                                   asp-action="DeleteTheme"
                                   asp-controller="ThemeSettings"
                                   asp-area="settings"
                                   asp-route-studentId="1"
                                   asp-route-themeId="@theme.Id">
                                    <i id="edit-icon" class="bi bi-trash"></i>
                                </a>
                            </form>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
